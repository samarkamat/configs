
set -o vi

# aliases
alias l='ls'
alias ll='ls -l'
alias ltr='ls -ltr'
alias latr='ls -latr'
alias la='ls -a'
alias c='cd'

# PS1
PS1='\n\h:\w\n\$'
PROMPT_COMMAND=''
function _update_ps1() {
    PS1="$(~/powerline-shell.py $? 2> /dev/null)"
}

if [ -z "$powerlinebin" ]; then
    PROMPT_COMMAND="_update_ps1; $PROMPT_COMMAND"
fi

